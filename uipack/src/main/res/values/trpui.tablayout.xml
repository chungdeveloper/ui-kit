    <style name="TrpTabLayoutDefaultStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TrpTabTextAppearanceDefault</item>
        <item name="tabPaddingTop">-1dp</item>
        <item name="tabPaddingBottom">-1dp</item>
        <item name="tabPaddingStart">-1dp</item>
        <item name="tabPaddingEnd">-1dp</item>
        <item name="android:clipToPadding">false</item>
