<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SnackBarActivity">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Default"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Title"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Content icon"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultIconTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Icon Title"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Action"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultActionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Action Icon"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultActionIconTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Action Icon Title"
                tools:ignore="HardcodedText" />

            <com.chungld.uipack.button.TrpButton
                android:id="@+id/btnDefaultActionIconTitleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack Action Icon Title With Icon content"
                tools:ignore="HardcodedText" />
        </com.google.android.material.chip.ChipGroup>
    </ScrollView>
</layout>